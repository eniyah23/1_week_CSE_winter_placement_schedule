Week2_Python_Problems.py 

# Python Practice Problems

# 1. Even or Odd
num = int(input("Enter a number: "))
if num % 2 == 0:
    print("Even number")
else:
    print("Odd number")

# 2. Factorial
n = int(input("Enter a number for factorial: "))
fact = 1
for i in range(1, n + 1):
    fact *= i
print("Factorial:", fact)

# 3. Reverse a string
text = input("Enter a string: ")
print("Reversed string:", text[::-1])

Week2_DSA_Basics.py 
# DSA Basics

# Array (List)
numbers = [10, 20, 30, 40, 50]
print("Array elements:", numbers)

# Linear Search
search = int(input("Enter element to search: "))
found = False

for i in numbers:
    if i == search:
        found = True
        break

if found:
    print("Element found")
else:
    print("Element not found")

# Stack using list
stack = []
stack.append(10)
stack.append(20)
stack.append(30)

print("Stack:", stack)
stack.pop()
print("After pop:", stack)

